<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/event_info"
    android:showDividers="none"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/event_name_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Event"
        android:textSize="50dp"
        android:gravity="center_horizontal"
        />
    
    <TextView
        android:id="@+id/street_name_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Street"
        android:textSize="32dp"
        android:gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/start_time_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Start Time:"
        android:textSize="32dp"
        android:gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/end_time_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="End Time:"
        android:textSize="32dp"
        android:gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/category_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Category:"
        android:textSize="32dp"
        android:gravity="center_horizontal"
        />


    <!-- Scrollable images  -->

    <HorizontalScrollView
        android:layout_margin="20dp"
        android:layout_width="fill_parent"
        android:layout_height="250dp">

    <ImageView
        android:id="@+id/image_info"
        android:layout_width="320dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"/>

    </HorizontalScrollView>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="32dp"/>



    <TextView
        android:id="@+id/description_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />



    <fragment
        android:id="@+id/location_map"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        class="com.google.android.gms.maps.SupportMapFragment" />

    <Button
        android:id="@+id/google_maps_info"
        android:layout_width="fill_parent"
        android:text="Take Me There"
        android:layout_height="50dp"
        />


</LinearLayout>
</ScrollView>